# ForkMonkey Server Configuration
# Copy this file to .env and fill in your values

# GitHub Personal Access Token (with repo, workflow permissions)
GITHUB_TOKEN=your_github_token_here

# Source repository
FORKMONKEY_SOURCE_REPO=roeiba/forkMonkey

# GitHub App Configuration (for Full-Trust OAuth flow)
# Optional - only needed if you want to enable OAuth
GITHUB_APP_ID=
GITHUB_APP_CLIENT_ID=
GITHUB_APP_CLIENT_SECRET=
GITHUB_PRIVATE_KEY=

# Server Configuration
PORT=5000
FLASK_DEBUG=false
